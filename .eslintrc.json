{
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "es6": true,
        "node": true,
        "cypress/globals": true
    },
    "plugins": [
        "cypress"
    ],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "rules": {
        "max-len": ["error", { "code": 100 }],
        "strict": [2, "global"],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ]
    }
}